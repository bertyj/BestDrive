<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEA100">

    <include layout="@layout/layout_app_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_login_username"
            style="@style/EditTextItem"
            android:drawableLeft="@drawable/icon_username"
            android:hint="请输入用户名"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edit_login_password"
            style="@style/EditTextItem"
            android:drawableLeft="@drawable/icon_password"
            android:hint="请输入密码"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/text_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:text="忘记密码?"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/button_user_login"
        style="@style/CommonButton"
        android:layout_width="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="登  录" />

    <include
        layout="@layout/layout_thirdparty_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp" />

</RelativeLayout>
